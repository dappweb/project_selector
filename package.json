{
  "name": "tender-analysis-system",
  "version": "1.0.0",
  "description": "智能招投标分析系统 - Cloudflare Workers版本",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:dev": "wrangler deploy --env development",
    "deploy:prod": "wrangler deploy --env production",
    "build": "tsc",
    "test": "vitest",
    "test:run": "vitest run",
    "db:generate": "drizzle-kit generate:sqlite",
    "db:migrate": "wrangler d1 migrations apply tender-analysis-db --local",
    "db:migrate:dev": "wrangler d1 migrations apply tender-analysis-db --env development",
    "db:migrate:prod": "wrangler d1 migrations apply tender-analysis-db --env production",
    "setup": "powershell -ExecutionPolicy Bypass -File scripts/setup-resources.ps1",
    "check": "powershell -ExecutionPolicy Bypass -File scripts/check-config.ps1",
    "deploy:full": "powershell -ExecutionPolicy Bypass -File scripts/deploy.ps1",
    "deploy:full:prod": "powershell -ExecutionPolicy Bypass -File scripts/deploy.ps1 production",
    "logs": "wrangler tail",
    "db:studio": "drizzle-kit studio",
    "test:deployment": "powershell -ExecutionPolicy Bypass -File scripts/test-deployment.ps1"
  },
  "keywords": ["cloudflare", "workers", "ai", "tender", "analysis"],
  "author": "Tender Analysis Team",
  "license": "MIT",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20231218.0",
    "@types/node": "^20.10.0",
    "drizzle-kit": "^0.20.6",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "wrangler": "^3.19.0"
  },
  "dependencies": {
    "drizzle-orm": "^0.29.0",
    "hono": "^3.11.0"
  }
}